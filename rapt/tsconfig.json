{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "outFile": "built/out.js",

    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,

    "emitBOM": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
